
<%= stylesheet_link_tag '/stylesheets/welcome/login' %>


<div class="ui middle aligned center aligned grid">
	<div class="row">
		<div class="column">
  
     <%= image_tag("TAM-LogoBox.png", class:"ui small centered image") %>

     <h1>Administrator Login</h1>
    <div class="ui segments">
    
    	<div class="ui segment">
    		
      	<form class="ui large form" action="/loginUser" method="post">
        <div class="field">
        	<label>Email Address</label>
          <div class="ui left icon input">
            <i class="user maroon icon"></i>
            <input type="text" name="email" placeholder="E-mail address" value="test@peerteach.edu">
          </div>
        </div>
        <div class="field">
        	<label>Password</label>
          <div class="ui left icon input">
            <i class="lock maroon icon"></i>
            <input type="password" name="password" placeholder="Password" value="Abcd1234">
          </div>
        </div>
        <input type="submit" name="Login" class="ui fluid maroon large submit button">
        </form>
      </div>
      <div class="ui segment" id ="bottomSegment">
      	<p class="">
	      New to us? <a href="/confirm-account">Confirm Account</a>
	    </p>
      </div>
    </div>
    <div class="row">
    	<p><a href="/"><u>Return to Home Page</u></a></p>
    </div>
	</div>
  
  </div>
</div>
